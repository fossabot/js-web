    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "fast-csv": "^4.3.6",
    "numeral": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "typeorm": "^0.2.41"
  },

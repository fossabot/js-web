    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.169",
    "@types/node": "^14.14.31",
    "@types/numeral": "^2.0.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
